<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".RemainingKycStepOne">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:gravity="center_horizontal"


        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"

            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:text="Complete your KYC"

            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:id="@+id/cons1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/basic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_weight=".1"
            android:layout_marginTop="3dp"

            android:layout_marginBottom="3dp"
            android:text="Basic Information"
            android:textColor="#594099"
            android:textSize="10dp"
            />

        <View
            android:id="@+id/viewTwo"
            android:layout_width="0dp"
            android:layout_weight="01"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"

            android:background="#594099"
            />

        <TextView
            android:id="@+id/contect_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight=".1"
            android:textColor="#594099"
            android:text="Contact Details"

            android:textSize="10dp"
            />

        <View
            android:id="@+id/viewThree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_height="3sp"



            android:layout_marginStart="8dp"
            android:background="#594099"
            />

        <TextView
            android:id="@+id/documents_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".1"
            android:textColor="#594099"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="18dp"
            android:text="Documents"
            android:textSize="10dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/cons1"
        tools:layout_editor_absoluteX="16dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp">


            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:text="Address Proof"

                android:textColor="#636363"

                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout_gender"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/stroke_box"
                android:orientation="horizontal"


                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/gender_tv">

                <EditText
                    android:id="@+id/gender_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="01"
                    android:background="@color/white"

                    android:text="Aadhaar"
                    android:textColor="@color/black"
                    android:textSize="14dp"


                    />

                <ImageView
                    android:id="@+id/option_for_proof"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"

                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            </LinearLayout>

            <TextView

                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Aadhaar number"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/gender_tv"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_gender" />

            <EditText
                android:id="@+id/aadhar_num_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/stroke_box"
                android:hint="Enter Aadhaar number"
                android:padding="12dp"


                android:textColor="@color/black"

                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:layout_editor_absoluteX="18dp" />

            <TextView

                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Aadhaar front"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/aadhar_num_editText" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/aadhar_front_image_layout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/dotshape"
                android:orientation="horizontal"


                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    app:layout_constraintBottom_toBottomOf="@+id/click_to_upload_tv"
                    app:layout_constraintEnd_toStartOf="@+id/click_to_upload_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/click_to_upload_tv" />

                <TextView
                    android:id="@+id/click_to_upload_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="133dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.1"
                    android:gravity="start"
                    android:text="Click to Upload"
                    android:textColor="#1089FF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Aadhaar back"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/aadhar_front_image_layout" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout_"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/dotshape"
                android:orientation="horizontal"


                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10">

                <ImageView
                    android:id="@+id/file_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    app:layout_constraintBottom_toBottomOf="@+id/click_to_upload_back_tv"
                    app:layout_constraintEnd_toStartOf="@+id/click_to_upload_back_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/click_to_upload_back_tv" />

                <TextView
                    android:id="@+id/click_to_upload_back_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="133dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.1"
                    android:gravity="start"
                    android:text="Click to Upload"
                    android:textColor="#1089FF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView

                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Pan"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_" />

            <EditText
                android:id="@+id/pan_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/stroke_box"
                android:hint="Enter pan number"
                android:padding="12dp"


                android:textColor="@color/black"

                android:textSize="14dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:layout_editor_absoluteX="18dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="pan front"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/pan_editText" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pan_con"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/dotshape"
                android:orientation="horizontal"


                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

                <ImageView
                    android:id="@+id/file_imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    app:layout_constraintBottom_toBottomOf="@+id/pan_front_click_to_uploadtv"
                    app:layout_constraintEnd_toStartOf="@+id/pan_front_click_to_uploadtv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pan_front_click_to_uploadtv" />

                <TextView
                    android:id="@+id/pan_front_click_to_uploadtv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="133dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.1"
                    android:gravity="start"
                    android:text="Click to Upload"
                    android:textColor="#1089FF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="pan back"
                android:textColor="#636363"
                android:textSize="12dp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/pan_con" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pan_aadhar_front_image_layoutback"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="9dp"


                android:background="@drawable/dotshape"
                android:orientation="horizontal"
                android:padding="12dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13">

                <ImageView
                    android:id="@+id/file_imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_baseline_insert_drive_file_24"
                    app:layout_constraintBottom_toBottomOf="@+id/pan_back_click_to_uploadtv"
                    app:layout_constraintEnd_toStartOf="@+id/pan_back_click_to_uploadtv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/pan_back_click_to_uploadtv" />

                <TextView
                    android:id="@+id/pan_back_click_to_uploadtv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="133dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="0.1"
                    android:gravity="start"
                    android:text="Click to Upload"
                    android:textColor="#1089FF"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pan_aadhar_front_image_layoutback"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="-59dp">

                <Button
                    android:id="@+id/proceed_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/rounded_button"
                    android:text="PROCEED"

                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintStart_toStartOf="parent"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
